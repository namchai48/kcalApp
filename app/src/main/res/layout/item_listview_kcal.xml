<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <RelativeLayout
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        >

        <ImageView
            android:id="@+id/item_listview_productPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avartar"
            />

        <TextView
            android:id="@+id/item_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_listview_productPicture"
            android:maxLines="3"
            android:padding="4dp"
            android:text="title"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/item_listview_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_listview_title"
            android:layout_toRightOf="@id/item_listview_productPicture"
            android:maxLines="3"
            android:padding="4dp"
            android:text="description"
            android:textColor="#666"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>